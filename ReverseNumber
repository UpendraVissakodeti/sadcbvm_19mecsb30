import java.util.*;
class reverse
{
  public static void main(String args[])
  {
    int n;
    System.out.print("enter n value");
    Scanner sc=new Scanner(System.in);
   n=sc.nextInt();
    int r,rev=0;
    while(n!=0)
    {
      r=n%10;
      rev=rev*10+r;
      n=n/10;
    }
    System.out.println(rev);
  }
}
